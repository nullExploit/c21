<%- include('../partials/header') %>
    <div class="card mt-5">
        <div class="card-header p-4">
            <h1 class="text-center">Adding Data</h1>
        </div>
        <form action="" autocomplete="off" method="post" enctype="multipart/form-data">
            <div class="m-3 row">
                <label for="avatar" class="col-sm-2 col-form-label">Avatar</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" id="avatar" name="avatar" accept="image/*">
                </div>
            </div>
            <div class="m-3 row">
                <label for="preview" class="col-sm-2 col-form-label">Preview</label>
                <div class="col-sm-10">
                    <img src="/uploads/<%= avatar %>" alt="img" id="preview" class="img-fluid">
                </div>
            </div>

            <div class="card-footer">
                <div class="col-sm-5">
                    <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i></button>
                    <a href="/todos" class="btn btn-warning"><i class="fa-solid fa-arrow-rotate-left"></i></a>
                </div>
            </div>

        </form>
    </div>

    <%- include('../partials/footer') %>